### test on simulation parameters

AT_SETUP([Examples - simulation: requesting parameters])
AT_KEYWORDS([example simulation parameters])

# dataset prepared as follows:
# TATiDatasetWriter --data_type 2 --dimension 500 --seed 426 --noise 0.1 --train_test_ratio 0 --test_data_files dataset-twoclusters.csv

# run 1
AT_CHECK([cp -f ${abs_top_srcdir}/tests/userguide/simulation/pre/dataset-twoclusters.csv .], 0, [ignore], [ignore])
AT_CHECK([../../../run \
	${abs_top_srcdir}/doc/userguide/simulation/requesting_parameters.py
], 0, [stdout], [stderr])
AT_CHECK([grep "There are 3 parameters." stdout], 0, [ignore], [ignore])
# we drop the minus as it conflicts with options of grep
AT_CHECK([grep "0.02773.*, 0.1733.*, 0.1" stdout], 0, [ignore], [ignore])

AT_CLEANUP

