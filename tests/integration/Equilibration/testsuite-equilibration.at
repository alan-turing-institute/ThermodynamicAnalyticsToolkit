AT_SETUP([Equilibration - Create data, optimize, then sample])
AT_KEYWORDS([tatidatasetwriter tatioptimizer tatisampler save_model restore_model])

DIR=`pwd`
# run 1: Create dataset
AT_CHECK([../../../TATiDatasetWriter \
	--data_type 2 \
	--dimension 20 \
	--seed 426 \
	--train_test_ratio 0 \
	--test_data_files dataset-twocluster.csv
], 0, [stdout], [stderr])

# run 1: Optimize network
AT_CHECK([../../../TATiOptimizer \
	--batch_data_files dataset-twocluster.csv \
	--batch_size 20 \
	--max_steps 10 \
	--optimizer GradientDescent \
	--run_file run-save_model.csv \
	--save_model ${DIR}/model.ckpt \
	--seed 426 \
	--step_width 1e-1
], 0, [stdout], [stderr])

# run 2: sample network
AT_CHECK([../../../TATiSampler \
	--batch_data_files dataset-twocluster.csv \
	--batch_size 20 \
	--friction_constant 1 \
	--inverse_temperature 1 \
	--max_steps 10 \
	--sampler GeometricLangevinAlgorithm_1stOrder \
	--restore_model ${DIR}/model.ckpt \
	--run_file run-restore_model.csv \
	--seed 426 \
	--step_width 1e-1
], 0, [stdout], [stderr])

AT_CHECK([grep "11," run-restore_model.csv], 0, [ignore], [ignore])
# compare (exclude time_per_nth_step column)
# using decreased accuracy of 3e-7 for rounding issues, see tensorflaw sum test
AT_CHECK([../../../NumericalDiff \
    --general_threshold 3e-7 relative \
    --column_drop time_per_nth_step id -- run-save_model.csv ${abs_top_srcdir}/tests/integration/Equilibration/post/run-save_model.csv], 0, [ignore], [ignore])
AT_CHECK([../../../NumericalDiff \
    --general_threshold 3e-7 relative \
    --column_drop time_per_nth_step id -- run-restore_model.csv ${abs_top_srcdir}/tests/integration/Equilibration/post/run-restore_model.csv], 0, [ignore], [ignore])

AT_CLEANUP

