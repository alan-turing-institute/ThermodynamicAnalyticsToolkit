### test on prior by tethering

AT_SETUP([Optimizer - Prior through tethering])
AT_KEYWORDS([ddsoptimizer prior tethering])

# dataset prepared as follows:
# DatasetWriter --data_type 2 --dimension 20 --seed 426 --noise 0. --train_test_ratio 0 --test_data_file dataset-twoclusters.csv

AT_CHECK([../../../DDSOptimizer \
    --batch_data_files ${abs_top_srcdir}/tests/regression/DataOptimizer/Prior/pre/dataset-twoclusters.csv \
	--batch_size 20 \
	--max_steps 20 \
	--prior_factor 10.0 \
	--prior_lower_boundary 0. \
	--prior_upper_boundary 0. \
	--optimizer GradientDescent \
	--seed 426 \
	--step_width 1e-1 \
	--trajectory_file trajectory.csv
], 0, [stdout], [stderr])

# except for initial step check we remain within bounds
for col in `seq 4 6`; do
    AT_CHECK([tail -n 19 trajectory.csv | awk -F"," -v col=$col '{if (($col > 0.5) || ($col < -0.5)) { print NR","col": "$col; exit 255} }'], 0, [stdout], [ignore])
done

AT_CLEANUP
