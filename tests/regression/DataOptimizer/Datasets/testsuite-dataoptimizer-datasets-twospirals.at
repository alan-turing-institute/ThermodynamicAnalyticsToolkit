### test on classification problem: two spirals

AT_SETUP([Optimizer Datasets - two spirals])
AT_KEYWORDS([twospirals tatioptimizer])
# tf1.5 sees irregularities with this specific test and is therefore not recommended
AT_SKIP_IF([../../../check_package_version tensorflow 1.5.0])

# dataset prepared as follows:
# TATiDatasetWriter --data_type 3 --dimension 10 --seed 426 --noise 0. --train_test_ratio 0 --test_data_files dataset-twoclusters.csv

# TF1.9: Probably due to MKL introduction (anaconda has it by default), we
# need to constrain to 1000 steps (former 2000 steps diverged by more than 1e-4)
AT_CHECK([../../../TATiOptimizer \
    --batch_data_files ${abs_top_srcdir}/tests/regression/DataOptimizer/Datasets/pre/dataset-twospirals.csv \
    --batch_size 10 \
	--hidden_dimension 8 8 \
	--learning_rate 0.03 \
	--max_steps 850 \
	--optimizer GradientDescent \
	--run_file run-twospirals.csv \
	--seed 426
], 0, [stdout], [stderr])

# and compare (exclude time_per_nth_step column)
# TF1.9: Probably due to MKL introduction (anaconda has it by default), we
# need to degrade from 2e-7 to 4e-7
AT_CHECK([../../../NumericalDiff \
    --general_threshold `echo 4 $threshold | $awk '{print $1*$2}'` absolute \
    --column_drop time_per_nth_step id -- \
    run-twospirals.csv ${abs_top_srcdir}/tests/regression/DataOptimizer/Datasets/post/run-twospirals.csv], 0, [ignore], [ignore])

AT_CLEANUP

