### test on classification problem: four squares

AT_SETUP([Optimizer Datasets - four squares])
AT_KEYWORDS([foursquares ddsoptimizer])

AT_CHECK([../../../DDSOptimizer \
	--data_type 1 \
	--batch_size 10 \
	--hidden_dimension 4 \
	--learning_rate 0.03 \
	--max_steps 100 \
	--optimizer GradientDescent \
	--seed 426 \
	--run_file run.csv
], 0, [stdout], [stderr])
AT_CHECK([diff run.csv ${abs_top_srcdir}/tests/regression/DataOptimizer/Datasets/post/run-foursquares.csv], 0, [ignore], [ignore])

AT_CLEANUP

