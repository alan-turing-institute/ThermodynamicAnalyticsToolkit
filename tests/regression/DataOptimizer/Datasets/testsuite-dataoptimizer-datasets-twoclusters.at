### test on classification problem: two clusters

AT_SETUP([Optimizer Datasets - two clusters])
AT_KEYWORDS([twoclusters ddsoptimizer])

# dataset prepared as follows:
# DatasetWriter --data_type 2 --dimension 10 --seed 426 --noise 0. --train_test_ratio 0 --test_data_file dataset-twoclusters.csv

AT_CHECK([../../../DDSOptimizer \
    --batch_data_files ${abs_top_srcdir}/tests/regression/DataOptimizer/Datasets/pre/dataset-twoclusters.csv \
    --batch_size 10 \
	--hidden_dimension 2 \
	--max_steps 20 \
	--optimizer GradientDescent \
	--run_file run.csv \
	--seed 426 \
	--step_width 0.03
], 0, [stdout], [stderr])
AT_CHECK([diff run.csv ${abs_top_srcdir}/tests/regression/DataOptimizer/Datasets/post/run-twoclusters.csv], 0, [ignore], [ignore])

AT_CLEANUP

