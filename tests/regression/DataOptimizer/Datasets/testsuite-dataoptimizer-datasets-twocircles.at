### test on classification problem: two circles

AT_SETUP([Optimizer Datasets - two circles])
AT_KEYWORDS([twocircles ddsoptimizer])
AT_XFAIL_IF([/bin/true])

AT_CHECK([../../../DDSOptimizer \
	--data_type 0 \
	--batch_size 10 \
	--hidden_dimension 4 \
	--max_steps 100 \
	--optimizer GradientDescent \
	--seed 426 \
	--run_file run.csv \
	--step_width 0.03
], 0, [stdout], [stderr])
AT_CHECK([diff run.csv ${abs_top_srcdir}/tests/regression/DataOptimizer/Datasets/post/run-twocircles.csv], 0, [ignore], [ignore])

AT_CLEANUP

