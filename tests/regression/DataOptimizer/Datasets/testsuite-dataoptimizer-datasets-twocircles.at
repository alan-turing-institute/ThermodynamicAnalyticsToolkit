### test on classification problem: two circles

# dataset prepared as follows:
# TATiDatasetWriter --data_type 0 --dimension 10 --seed 426 --noise 0. --train_test_ratio 0 --test_data_file dataset-twoclusters.csv

AT_SETUP([Optimizer Datasets - two circles])
AT_KEYWORDS([twocircles tatioptimizer])

AT_CHECK([../../../TATiOptimizer \
    --batch_data_files ${abs_top_srcdir}/tests/regression/DataOptimizer/Datasets/pre/dataset-twocircles.csv \
    --batch_size 10 \
	--hidden_dimension 4 \
	--learning_rate 0.03 \
	--max_steps 100 \
	--optimizer GradientDescent \
	--run_file run-twocircles.csv \
	--seed 426
], 0, [stdout], [stderr])

# and compare (exclude time_per_nth_step column)
AT_CHECK([../../../NumericalDiff \
    --general_threshold 2e-7 absolute \
    --column_drop time_per_nth_step id -- \
    run-twocircles.csv ${abs_top_srcdir}/tests/regression/DataOptimizer/Datasets/post/run-twocircles.csv], 0, [ignore], [ignore])

AT_CLEANUP

