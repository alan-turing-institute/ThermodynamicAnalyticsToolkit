### test on reproducible runs using two clusters dataset

AT_SETUP([Optimizer Reproducibility - no seed])
AT_KEYWORDS([reproducibility seed twoclusters ddsoptimizer])

# run 1
AT_CHECK([../../DDSOptimizer \
	--data_type 2 \
	--batch_size 10 \
	--hidden_dimension 2 \
	--learning_rate 0.03 \
	--max_steps 20 \
	--optimizer GradientDescent \
	--csv_file run-first.csv
], 0, [stdout], [stderr])

# run 2
AT_CHECK([../../DDSOptimizer \
	--data_type 2 \
	--batch_size 10 \
	--hidden_dimension 2 \
	--learning_rate 0.03 \
	--max_steps 20 \
	--optimizer GradientDescent \
	--csv_file run-second.csv
], 0, [stdout], [stderr])

# now compare
AT_CHECK([diff run-first.csv run-second.csv], 1, [ignore], [ignore])

AT_CLEANUP

