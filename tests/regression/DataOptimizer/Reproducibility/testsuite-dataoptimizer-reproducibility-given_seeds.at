### test on reproducible runs using two clusters dataset

AT_SETUP([Optimizer Reproducibility - same and different seed])
AT_KEYWORDS([reproducibility seed twoclusters ddsoptimizer])

# run 1
AT_CHECK([../../DDSOptimizer \
	--data_type 2 \
	--batch_size 10 \
	--hidden_dimension 2 \
	--learning_rate 0.03 \
	--max_steps 20 \
	--optimizer GradientDescent \
	--seed 426 \
	--csv_file run-base.csv
], 0, [stdout], [stderr])

# run 2: same seed
AT_CHECK([../../DDSOptimizer \
	--data_type 2 \
	--batch_size 10 \
	--hidden_dimension 2 \
	--learning_rate 0.03 \
	--max_steps 20 \
	--optimizer GradientDescent \
	--seed 426 \
	--csv_file run-sameseed.csv
], 0, [stdout], [stderr])


# run 3: other seed
AT_CHECK([../../DDSOptimizer \
	--data_type 2 \
	--batch_size 10 \
	--hidden_dimension 2 \
	--learning_rate 0.03 \
	--max_steps 20 \
	--optimizer GradientDescent \
	--seed 427 \
	--csv_file run-otherseed.csv
], 0, [stdout], [stderr])

# now compare all
AT_CHECK([diff run-base.csv run-sameseed.csv], 0, [ignore], [ignore])
AT_CHECK([diff run-base.csv run-otherseed.csv], 1, [ignore], [ignore])

AT_CLEANUP

