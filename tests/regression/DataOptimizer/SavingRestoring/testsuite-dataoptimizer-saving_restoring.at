AT_SETUP([Optimizer - Saving and Restoring])
AT_KEYWORDS([ddsoptimizer save_model restore_model])

# dataset prepared as follows:
# DatasetWriter --data_type 2 --dimension 20 --seed 426 --noise 0. --train_test_ratio 0 --test_data_file dataset-twoclusters.csv

# we need absolute path for storing model (since tensorfloe 1.4)
DIR=`pwd`
# run 1
AT_CHECK([../../../DDSOptimizer \
    --batch_data_files ${abs_top_srcdir}/tests/regression/DataOptimizer/SavingRestoring/pre/dataset-twoclusters.csv \
    --batch_size 20 \
	--max_steps 10 \
	--optimizer GradientDescent \
	--run_file run-save_model.csv \
	--save_model ${DIR}/model.ckpt \
	--seed 426 \
	--step_width 1e-1
], 0, [stdout], [stderr])

# run 2
AT_CHECK([../../../DDSOptimizer \
    --batch_data_files ${abs_top_srcdir}/tests/regression/DataOptimizer/SavingRestoring/pre/dataset-twoclusters.csv \
    --batch_size 20 \
	--max_steps 10 \
	--optimizer GradientDescent\
	--restore_model ${DIR}/model.ckpt \
	--run_file run-restore_model.csv \
	--seed 426 \
	--step_width 1e-1
], 0, [stdout], [stderr])

AT_CHECK([grep "11," run-restore_model.csv], 0, [ignore], [ignore])
# and compare (exclude time_per_nth_step column)
AT_CHECK([../../../NumericalDiff --column_threshold time_per_nth_step 1e16 absolute -- run-restore_model.csv ${abs_top_srcdir}/tests/regression/DataOptimizer/SavingRestoring/post/run-restore_model.csv], 0, [ignore], [ignore])

AT_CLEANUP

