AT_SETUP([Optimizer Options - step width])
AT_KEYWORDS([help ddsoptimizer step_width])

# run 1
AT_CHECK([../../../DDSOptimizer \
	--batch_size 10 \
	--run_file run-step_width_1e-1.csv \
	--data_type 2 \
	--dimension 20 \
	--step_width 1e-1 \
	--max_steps 20 \
	--optimizer GradientDescent \
	--seed 426
], 0, [stdout], [stderr])

# run 2
AT_CHECK([../../../DDSOptimizer \
	--batch_size 10 \
	--run_file run-step_width_1e-2.csv \
	--data_type 2 \
	--dimension 20 \
	--step_width 1e-2 \
	--max_steps 20 \
	--optimizer GradientDescent\
	--seed 426
], 0, [stdout], [stderr])

# check that both differ, i.e. step_width is used
AT_CHECK([diff run-step_width_1e-1.csv run-step_width_1e-2.csv], 1, [ignore], [ignore])

AT_CLEANUP

