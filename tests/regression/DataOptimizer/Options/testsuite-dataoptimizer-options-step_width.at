### test on option step_width

AT_SETUP([Optimizer Options - step width])
AT_KEYWORDS([ddsoptimizer step_width])

# dataset prepared as follows:
# DatasetWriter --data_type 2 --dimension 10 --seed 426 --noise 0. --train_test_ratio 0 --test_data_file dataset-twoclusters.csv

# run 1
AT_CHECK([../../../DDSOptimizer \
    --batch_data_files ${abs_top_srcdir}/tests/regression/DataOptimizer/Options/pre/dataset-twoclusters.csv \
    --batch_size 10 \
	--every_nth 1 \
	--max_steps 20 \
	--optimizer GradientDescent \
	--run_file run-step_width_1e-1.csv \
	--seed 426 \
	--step_width 1e-1
], 0, [stdout], [stderr])

# run 2
AT_CHECK([../../../DDSOptimizer \
    --batch_data_files ${abs_top_srcdir}/tests/regression/DataOptimizer/Options/pre/dataset-twoclusters.csv \
    --batch_size 10 \
	--every_nth 1 \
	--max_steps 20 \
	--optimizer GradientDescent\
	--run_file run-step_width_1e-2.csv \
	--seed 426 \
	--step_width 1e-2
], 0, [stdout], [stderr])

# check that both differ, i.e. step_width is used
AT_CHECK([diff run-step_width_1e-1.csv run-step_width_1e-2.csv], 1, [ignore], [ignore])

AT_CLEANUP

