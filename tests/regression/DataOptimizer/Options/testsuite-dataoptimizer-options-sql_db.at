### test on option sql_db

AT_SETUP([Optimizer Options - runtime sql database I])
AT_KEYWORDS([help ddsoptimizer sql_db runtime])

AT_CHECK([../../../DDSOptimizer \
	--batch_size 10 \
	--run_file run-step_width_1e-1.csv \
	--data_type 2 \
	--every_nth 1 \
	--dimension 20 \
	--max_steps 20 \
	--optimizer GradientDescent \
	--seed 426 \
	--sql_db sqlite.db \
	--step_width 1e-1
], 0, [stdout], [stderr])

AT_CHECK([test -e sqlite.db], 0, [ignore], [ignore])

AT_CLEANUP

AT_SETUP([Optimizer Options - runtime sql database II])
AT_KEYWORDS([help ddsoptimizer sql_db runtime])
AT_SKIP_IF([sqlite3 -help])

AT_CHECK([../../../DDSOptimizer \
	--batch_size 10 \
	--run_file run-step_width_1e-1.csv \
	--data_type 2 \
	--every_nth 1 \
	--dimension 20 \
	--max_steps 20 \
	--optimizer GradientDescent \
	--seed 426 \
	--sql_db sqlite.db \
	--step_width 1e-1
], 0, [stdout], [stderr])

AT_CHECK([sqlite3 sqlite.db "SELECT * from run_time"], 0, [ignore], [ignore])

AT_CLEANUP
