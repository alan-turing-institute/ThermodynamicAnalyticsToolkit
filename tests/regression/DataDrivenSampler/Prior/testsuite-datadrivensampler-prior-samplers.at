# HMC is a bit more touchy here than the rest, probably because of
# re-initializing of momenta. We need to decrease step_width slightly.
AT_SETUP([Sampler - Prior in HMC])
AT_KEYWORDS([ddsampler samplers prior wall_repelling lower_boundary upper_boundary hmc])

# dataset prepared as follows:
# DatasetWriter --data_type 2 --dimension 20 --seed 426 --noise 0. --train_test_ratio 0 --test_data_file dataset-twoclusters.csv

AT_CHECK([../../../DDSampler \
    --batch_data_files ${abs_top_srcdir}/tests/regression/DataDrivenSampler/Prior/pre/dataset-twoclusters.csv \
	--batch_size 20 \
	--hamiltonian_dynamics_time 0.25 \
	--inverse_temperature 1 \
	--max_steps 40 \
	--prior_factor .1 \
	--prior_lower_boundary .0 \
	--prior_upper_boundary 1.0 \
	--sampler HamiltonianMonteCarlo \
	--seed 426 \
	--step_width 5e-2 \
	--trajectory_file trajectory.csv
], 0, [stdout], [stderr])

# except for initial step check we remain within bounds
for col in `seq 4 6`; do
    AT_CHECK([tail -n 19 trajectory.csv | awk -F"," -v col=$col '{if (($col > 1.2) || ($col < -0.2)) { print NR","col": "$col; exit 255} }'], 0, [stdout], [ignore])
done

AT_CLEANUP
