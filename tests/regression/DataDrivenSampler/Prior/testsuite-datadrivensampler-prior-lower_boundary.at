### test on prior by wall-repelling force

AT_SETUP([Sampler - Prior through wall-repelling force])
AT_KEYWORDS([ddsampler prior wall_repelling])

# dataset prepared as follows:
# DatasetWriter --data_type 2 --dimension 20 --seed 426 --noise 0. --train_test_ratio 0 --test_data_file dataset-twoclusters.csv

AT_CHECK([../../../DDSampler \
    --batch_data_files ${abs_top_srcdir}/tests/regression/DataDrivenSampler/Prior/pre/dataset-twoclusters.csv \
	--batch_size 20 \
	--friction_constant 1 \
	--inverse_temperature 1 \
	--max_steps 20 \
	--prior_factor 1.0 \
	--prior_lower_boundary -1.0 \
	--prior_upper_boundary 1.0 \
	--sampler GeometricLangevinAlgorithm_1stOrder \
	--seed 426 \
	--step_width 1e-1 \
	--trajectory_file trajectory.csv
], 0, [stdout], [stderr])

AT_CHECK([grep -c "1.00000000e+00" trajectory.csv], 0, [stdout], [ignore])
AT_CHECK([grep "10" stdout], 0, [ignore], [ignore])

AT_CLEANUP


