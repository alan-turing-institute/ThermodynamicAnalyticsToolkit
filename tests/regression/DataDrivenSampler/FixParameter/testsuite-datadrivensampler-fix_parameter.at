### test on fixing a parameter

AT_SETUP([Sampler - Fix biases])
AT_KEYWORDS([ddsampler fix_parameter biases])

AT_CHECK([../../../DDSampler \
	--batch_size 20 \
	--data_type 2 \
	--dimension 20 \
	--fix_parameter "output/biases/Variable:0=1." \
	--friction_constant 1 \
	--inverse_temperature 1 \
	--max_steps 10 \
	--sampler GeometricLangevinAlgorithm_1stOrder \
	--seed 426 \
	--step_width 1e-1 \
	--trajectory_file trajectory.csv
], 0, [stdout], [stderr])

AT_CHECK([grep -c "1.00000000e+00" trajectory.csv], 0, [stdout], [ignore])
AT_CHECK([grep "10" stdout], 0, [ignore], [ignore])

AT_CLEANUP

AT_SETUP([Sampler - Fix weights])
AT_KEYWORDS([ddsampler fix_parameter weights])

AT_CHECK([../../../DDSampler \
	--batch_size 20 \
	--data_type 2 \
	--dimension 20 \
	--fix_parameter "output/weights/Variable:0=1.,-1." \
	--friction_constant 1 \
	--inverse_temperature 1 \
	--max_steps 10 \
	--sampler GeometricLangevinAlgorithm_1stOrder \
	--seed 426 \
	--step_width 1e-1 \
	--trajectory_file trajectory.csv
], 0, [stdout], [stderr])

AT_CHECK([grep -c "1.00000000e+00,-1.00000000e+00" trajectory.csv], 0, [stdout], [ignore])
AT_CHECK([grep "10" stdout], 0, [ignore], [ignore])

AT_CLEANUP

