### test on saved averages

AT_SETUP([Sampler Averages - Simple])
AT_KEYWORDS([tatisampler averages])

# dataset prepared as follows:
# TATiDatasetWriter --data_type 2 --dimension 20 --seed 426 --noise 0. --train_test_ratio 0 --test_data_files dataset-twoclusters.csv

# run 1
AT_CHECK([../../../TATiSampler \
	--averages_file averages-twoclusters.csv \
    --batch_data_files ${abs_top_srcdir}/tests/regression/DataDrivenSampler/Averages/pre/dataset-twoclusters.csv \
	--batch_size 20 \
	--friction_constant 1 \
	--inverse_temperature 1 \
	--max_steps 10 \
	--sampler GeometricLangevinAlgorithm_1stOrder \
	--seed 426 \
	--step_width 1e-1
], 0, [stdout], [stderr])

# and compare
AT_CHECK([../../../NumericalDiff \
    --general_threshold 1e-7 absolute \
    -- averages-twoclusters.csv ${abs_top_srcdir}/tests/regression/DataDrivenSampler/Averages/post/averages-twoclusters.csv], 0, [ignore], [ignore])

AT_CLEANUP
