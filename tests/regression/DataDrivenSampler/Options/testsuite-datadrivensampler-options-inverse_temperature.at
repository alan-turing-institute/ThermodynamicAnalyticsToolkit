### test on option inverse_temperature

AT_SETUP([Sampler Options - inverse temperature])
AT_KEYWORDS([options tatisampler inverse_temperature])

# dataset prepared as follows:
# TATiDatasetWriter --data_type 2 --dimension 10 --seed 426 --noise 0. --train_test_ratio 0 --test_data_files dataset-twoclusters.csv

# run 1
AT_CHECK([../../../TATiSampler \
    --batch_data_files ${abs_top_srcdir}/tests/regression/DataDrivenSampler/Options/pre/dataset-twoclusters.csv \
    --batch_size 10 \
	--friction_constant 1 \
	--inverse_temperature 1 \
	--max_steps 20 \
	--run_file run-inverse_temperature_1.csv \
	--sampler GeometricLangevinAlgorithm_1stOrder\
	--seed 426 \
	--step_width 1e-2
], 0, [stdout], [stderr])

# run 2
AT_CHECK([../../../TATiSampler \
    --batch_data_files ${abs_top_srcdir}/tests/regression/DataDrivenSampler/Options/pre/dataset-twoclusters.csv \
    --batch_size 10 \
	--friction_constant 1 \
	--inverse_temperature 1e5 \
	--max_steps 20 \
	--run_file run-inverse_temperature_1e5.csv \
	--sampler GeometricLangevinAlgorithm_1stOrder\
	--seed 426 \
	--step_width 1e-2
], 0, [stdout], [stderr])

# check that both differ, i.e. step_width is used
AT_CHECK([diff run-inverse_temperature_1.csv run-inverse_temperature_1e5.csv], 1, [ignore], [ignore])

AT_CLEANUP
