AT_SETUP([Sampler - Saving and Restoring])
AT_KEYWORDS([help ddsampler save_model restore_model])

# run 1
AT_CHECK([../../DDSampler \
	--batch_size 10 \
	--csv_file run-save_model.csv \
	--data_type 2 \
	--dimension 20 \
	--friction_constant 1 \
	--inverse_temperature 1 \
	--max_steps 10 \
	--optimizer GeometricLangevinAlgorithm_1stOrder \
	--save_model model.cpkt \
	--seed 426 \
	--step_width 1e-1
], 0, [stdout], [stderr])

# run 2
AT_CHECK([../../DDSampler \
	--batch_size 10 \
	--csv_file run-restore_model.csv \
	--data_type 2 \
	--dimension 20 \
	--friction_constant 1 \
	--inverse_temperature 1 \
	--max_steps 10 \
	--optimizer GeometricLangevinAlgorithm_1stOrder \
	--restore_model model.cpkt \
	--seed 426 \
	--step_width 1e-1
], 0, [stdout], [stderr])

AT_CHECK([grep "11," run-restore_model.csv], 0, [ignore], [ignore])
AT_CHECK([diff run-restore_model.csv ${abs_top_srcdir}/tests/regression/DataDrivenSampler/SavingRestoring/post/run-restore_model.csv], 0, [ignore], [ignore])

AT_CLEANUP

