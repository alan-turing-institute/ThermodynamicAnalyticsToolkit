### test on different input pipelines

AT_SETUP([Sampler - CSV in-memory vs. file pipeline])
AT_KEYWORDS([tatisampler csv file_pipeline inmemory_pipeline])

# dataset prepared as follows:
# TATiDatasetWriter --data_type 2 --dimension 20 --seed 426 --noise 0. --train_test_ratio 0 --test_data_files dataset-twoclusters.csv

AT_CHECK([../../../TATiSampler \
    --batch_data_files ${abs_top_srcdir}/tests/regression/DataDrivenSampler/Pipelines/pre/dataset-twoclusters.csv \
	--batch_size 20 \
	--friction_constant 1 \
    --in_memory_pipeline 1 \
	--inverse_temperature 1 \
	--max_steps 10 \
	--run_file run-inmemory.csv \
	--sampler GeometricLangevinAlgorithm_1stOrder \
	--seed 426 \
	--step_width 1e-1 \
	--trajectory_file trajectory-inmemory.csv
], 0, [stdout], [stderr])


AT_CHECK([../../../TATiSampler \
    --batch_data_files ${abs_top_srcdir}/tests/regression/DataDrivenSampler/Pipelines/pre/dataset-twoclusters.csv \
	--batch_size 20 \
	--friction_constant 1 \
    --in_memory_pipeline 0 \
	--inverse_temperature 1 \
	--max_steps 10 \
	--run_file run-file.csv \
	--sampler GeometricLangevinAlgorithm_1stOrder \
	--seed 426 \
	--step_width 1e-1 \
	--trajectory_file trajectory-file.csv
], 0, [stdout], [stderr])

AT_CHECK([../../../NumericalDiff \
    --column_drop time_per_nth_step -- \
    run-inmemory.csv run-file.csv], 0, [ignore], [ignore])
AT_CHECK([../../../NumericalDiff \
    trajectory-inmemory.csv trajectory-file.csv], 0, [ignore], [ignore])

AT_CLEANUP

