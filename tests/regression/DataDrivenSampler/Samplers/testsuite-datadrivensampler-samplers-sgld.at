### test on reproducible runs using two clusters dataset

AT_SETUP([Samplers - SGLD])
AT_KEYWORDS([samplers ddsampler SGLD])

# run 1
AT_CHECK([../../../DDSampler \
	--batch_size 10 \
	--run_file run-SGLD.csv \
	--data_type 2 \
	--dimension 20 \
	--inverse_temperature 1 \
	--step_width 1e-2 \
	--max_steps 20 \
	--sampler StochasticGradientLangevinDynamics\
	--seed 426 \
	--trajectory_file trajectory-SGLD.csv
], 0, [stdout], [stderr])

# now compare
AT_CHECK([diff run-SGLD.csv ${abs_top_srcdir}/tests/regression/DataDrivenSampler/Samplers/post/run-SGLD.csv], 0, [ignore], [ignore])
AT_CHECK([diff trajectory-SGLD.csv ${abs_top_srcdir}/tests/regression/DataDrivenSampler/Samplers/post/trajectory-SGLD.csv], 0, [ignore], [ignore])

AT_CLEANUP

