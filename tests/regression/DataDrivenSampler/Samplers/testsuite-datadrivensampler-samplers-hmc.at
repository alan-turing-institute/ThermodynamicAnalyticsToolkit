### test on different samplers

AT_SETUP([Samplers - HMC])
AT_KEYWORDS([samplers ddsampler hmc])

# dataset prepared as follows:
# DatasetWriter --data_type 2 --dimension 20 --seed 426 --noise 0. --train_test_ratio 0 --test_data_file dataset-twoclusters.csv

# we picked a case (temp, seed, number_mc_steps) were there is accept&reject
AT_CHECK([../../../DDSampler \
    --batch_data_files ${abs_top_srcdir}/tests/regression/DataDrivenSampler/Samplers/pre/dataset-twoclusters.csv \
	--batch_size 20 \
	--run_file run-HMC.csv \
	--inverse_temperature 1e1 \
	--max_steps 100 \
	--hamiltonian_dynamics_steps 5 \
	--step_width 1e-2 \
	--sampler HamiltonianMonteCarlo\
	--seed 426 \
	--trajectory_file trajectory-HMC.csv
], 0, [stdout], [stderr])

# now compare
AT_CHECK([diff run-HMC.csv ${abs_top_srcdir}/tests/regression/DataDrivenSampler/Samplers/post/run-HMC.csv], 0, [ignore], [ignore])
AT_CHECK([diff trajectory-HMC.csv ${abs_top_srcdir}/tests/regression/DataDrivenSampler/Samplers/post/trajectory-HMC.csv], 0, [ignore], [ignore])

AT_CLEANUP

