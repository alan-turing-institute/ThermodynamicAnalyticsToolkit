### test on different samplers

AT_SETUP([Samplers - HMC])
AT_KEYWORDS([samplers tatisampler hmc])

# dataset prepared as follows:
# TATiDatasetWriter --data_type 2 --dimension 20 --seed 426 --noise 0. --train_test_ratio 0 --test_data_file dataset-twoclusters.csv

# we picked a case (temp, seed, number_mc_steps) were there is accept&reject
AT_CHECK([../../../TATiSampler \
	--batch_data_files ${abs_top_srcdir}/tests/regression/DataDrivenSampler/Samplers/pre/dataset-twoclusters.csv \
	--batch_size 20 \
	--run_file run-HMC.csv \
	--inverse_temperature 1e1 \
	--max_steps 100 \
	--hamiltonian_dynamics_time 0.05 \
	--step_width 1e-2 \
	--sampler HamiltonianMonteCarlo\
	--seed 426 \
	--trajectory_file trajectory-HMC.csv
], 0, [stdout], [stderr])

# now compare (exclude time_per_nth_step column)
AT_CHECK([../../../NumericalDiff \
    --general_threshold 1e-7 absolute \
    --column_drop time_per_nth_step id -- \
    run-HMC.csv ${abs_top_srcdir}/tests/regression/DataDrivenSampler/Samplers/post/run-HMC.csv], 0, [ignore], [ignore])
AT_CHECK([../../../NumericalDiff \
    --general_threshold 1e-7 absolute \
    --column_drop id -- \
    trajectory-HMC.csv ${abs_top_srcdir}/tests/regression/DataDrivenSampler/Samplers/post/trajectory-HMC.csv], 0, [ignore], [ignore])

AT_CLEANUP


AT_SETUP([Samplers - HMC with hidden nodes])
AT_KEYWORDS([samplers tatisampler hmc hidden])

# dataset prepared as follows:
# TATiDatasetWriter --data_type 2 --dimension 20 --seed 426 --noise 0. --train_test_ratio 0 --test_data_file dataset-twoclusters.csv

# we picked a case (temp, seed, number_mc_steps) were there is accept&reject
AT_CHECK([../../../TATiSampler \
	--batch_data_files ${abs_top_srcdir}/tests/regression/DataDrivenSampler/Samplers/pre/dataset-twoclusters.csv \
	--batch_size 20 \
	--run_file run-HMC-hidden.csv \
	--hidden_dimension 4 \
	--inverse_temperature 1e1 \
	--max_steps 100 \
	--hamiltonian_dynamics_time 0.05 \
	--step_width 1e-2 \
	--sampler HamiltonianMonteCarlo\
	--seed 426 \
	--trajectory_file trajectory-HMC-hidden.csv
], 0, [stdout], [stderr])

# now compare: for some reason with hidden layers loss, total_energy, old_total_energy slightly vary from run to run
AT_CHECK([../../../NumericalDiff \
    --general_threshold 3e-7 absolute \
    --column_drop time_per_nth_step id -- \
    run-HMC-hidden.csv ${abs_top_srcdir}/tests/regression/DataDrivenSampler/Samplers/post/run-HMC-hidden.csv], 0, [ignore], [ignore])
AT_CHECK([../../../NumericalDiff \
    --general_threshold 3e-7 absolute \
    --column_drop id -- \
    trajectory-HMC-hidden.csv ${abs_top_srcdir}/tests/regression/DataDrivenSampler/Samplers/post/trajectory-HMC-hidden.csv], 0, [ignore], [ignore])

AT_CLEANUP

