### test on exploring with just a single trajectory

AT_SETUP([Explorer - single trajectory exploration])
AT_KEYWORDS([options tatiexplorer exploration single_trajectory])

# dataset prepared as follows:
# TATiDatasetWriter --data_type 2 --dimension 10 --seed 426 --noise 0. --train_test_ratio 0 --test_data_files dataset-twoclusters.csv

# run
AT_CHECK([../../../TATiExplorer \
	--batch_data_files ${abs_top_srcdir}/tests/regression/DataDrivenExplorer/SingleTrajectory/pre/dataset-twoclusters.csv \
	--batch_size 10 \
	--diffusion_map_method vanilla \
	--do_hessians 1 \
	--every_nth 1 \
	--friction_constant 1 \
	--inverse_temperature 1 \
	--max_exploration_steps 1 \
	--max_legs 25 \
	--max_steps 20 \
	--minima_file minima.csv \
	--number_of_eigenvalues 1 \
	--number_of_parallel_trajectories 3 \
	--optimizer GradientDescent \
	--run_file run-single.csv \
	--step_width 1e-2 \
	--sampler GeometricLangevinAlgorithm_1stOrder \
	--seed 426 \
	--trajectory_file trajectory-single.csv \
	--use_reweighting 0
], 0, [stdout], [stderr])

AT_CHECK([../../../NumericalDiff \
    --general_threshold 1e-6 absolute \
    --column_drop time_per_nth_step -- \
    run-single.csv ${abs_top_srcdir}/tests/regression/DataDrivenExplorer/SingleTrajectory/post/run-single.csv], 0, [ignore], [ignore])
colname="num_negative_ev"
AT_CHECK([cat minima.csv | \
    gawk -F"," -v colname=$colname \
    'BEGIN { col=-1} \
    { if (NR == 1) { for (i=1;i<=NF;++i) { if ($i == colname) { col = i } } } else \
        { if (col == -1) { print "Could not find column with name "colname; exit 255 } else \
          { if ($col > 0) { print NR","col": "$col; exit 255} } } }'], 0, [stdout], [ignore])

AT_CLEANUP
