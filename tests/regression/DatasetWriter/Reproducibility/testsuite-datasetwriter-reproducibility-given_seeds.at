### test on reproducible runs using two clusters dataset

AT_SETUP([DatasetWriter Reproducibility - same and different seed])
AT_KEYWORDS([reproducibility seed twoclusters datasetwriter])

# run 1
AT_CHECK([../../../DatasetWriter \
	--data_type 2 \
	--dimension 20 \
	--noise 0.1 \
	--seed 426 \
	--train_test_ratio 0 \
	--test_data_file testset-base.csv
], 0, [stdout], [stderr])

# run 2: same seed
AT_CHECK([../../../DatasetWriter \
	--data_type 2 \
	--dimension 20 \
	--noise 0.1 \
	--seed 426 \
	--train_test_ratio 0 \
	--test_data_file testset-sameseed.csv
], 0, [stdout], [stderr])


# run 3: other seed
AT_CHECK([../../../DatasetWriter \
	--data_type 2 \
	--dimension 20 \
	--noise 0.1 \
	--seed 427 \
	--train_test_ratio 0 \
	--test_data_file testset-otherseed.csv
], 0, [stdout], [stderr])

# now compare all
AT_CHECK([diff testset-base.csv testset-sameseed.csv], 0, [ignore], [ignore])
AT_CHECK([diff testset-base.csv testset-otherseed.csv], 1, [ignore], [ignore])

AT_CLEANUP

